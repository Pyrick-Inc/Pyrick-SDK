{
  "name": "@pyrick/themis",
  "version": "0.1.0",
  "description": "Pyrick SDK - Open-source Software Development Kit for integrating with Pyrick platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts,.tsx -c node_modules/@pyrick-inc/eslint-config/base.js",
    "format": "biome format .",
    "dev": "tsc --watch",
    "test": "jest",
    "check": "biome ci .",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/**/*",
    "contracts/**/*"
  ],
  "keywords": [
    "pyrick",
    "crm",
    "sdk",
    "microservices",
    "typescript"
  ],
  "author": "Pyrick Systems",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pyrick/pyrick-sdk.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@pyrick-inc/eslint-config": "latest",
    "@pyrick-inc/tsconfig": "1.0.2",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "eslint": "^9.11.1",
    "jest": "^29.6.2",
    "typescript": "^5.0.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "overrides": {
    "glob": "^11.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "backend",
    "frontend"
  ]
}
